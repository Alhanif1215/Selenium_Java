package package_01;

import java.awt.AWTException;
import java.awt.Robot;
import java.awt.event.KeyEvent;

import org.openqa.selenium.*;
import org.openqa.selenium.chrome.ChromeDriver;

public class HnadlingKA{

	public static void main(String[] args) throws AWTException, InterruptedException  {
		
		WebDriver driver = new ChromeDriver();
		driver.manage().window().maximize();
		Robot r= new Robot();
		try {
			
			driver.get("https://opensource-demo.orangehrmlive.com/web/index.php/auth/login");
			Thread.sleep(2000);
			WebElement ele = driver.findElement(By.xpath("//input[@name='username']"));
			ele.sendKeys("Admin"+Keys.TAB, "admin123"+Keys.ENTER);
			Thread.sleep(2000);
			String val=(driver.findElement(By.xpath("//h6[text()='Dashboard']")).isDisplayed())?"Dashboard is displayed":"Dashboard is not displayed";
			System.out.println(val);
			
		} catch (Exception e) {
			System.out.println(driver.getTitle());
			System.out.println("Something error correct it");
		} finally {
			
			r.keyPress(KeyEvent.VK_ALT);
			r.keyPress(KeyEvent.VK_TAB);
			r.keyRelease(KeyEvent.VK_ALT);
			r.keyRelease(KeyEvent.VK_TAB);
			System.out.println(val);
			Thread.sleep(6000);
			
			driver.quit();					
		}
	
	}
}	