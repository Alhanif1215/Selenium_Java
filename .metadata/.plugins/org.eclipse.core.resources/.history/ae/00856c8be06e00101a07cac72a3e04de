package package_01;

import java.io.File;
import java.io.IOException;
import java.time.Duration;

import org.openqa.selenium.By;
import org.openqa.selenium.OutputType;
import org.openqa.selenium.TakesScreenshot;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.chrome.ChromeDriver;
import org.openqa.selenium.interactions.Actions;

import com.google.common.io.Files;

public class DAppTimePicker {

	public static void main(String[] args) throws IOException {
		WebDriver driver = new ChromeDriver();
		driver.manage().timeouts().implicitlyWait(Duration.ofSeconds(10));
		driver.manage().window().maximize();
		driver.get("https://demoapps.qspiders.com/ui?scenario=1");
		driver.findElement(By.xpath("//section[text()='Date & Time Picker']")).click();
		driver.findElement(By.xpath("//section[text()='Time Picker']")).click();
		driver.findElement(By.xpath("//a[text()='Time Picker Clock']")).click();
		driver.findElement(By.id(":r3:")).click();
		WebElement hr = driver.findElement(By.xpath("//div[@class='MuiClockPointer-thumb css-118whkv']"));
		WebElement hr4 = driver.findElement(By.xpath("//span[@aria-label='4 hours']"));
		Actions a = new Actions(driver);
		a.dragAndDrop(hr, hr4).perform();
		WebElement min00 = driver.findElement(By.xpath("//div[@class='MuiClockPointer-thumb css-118whkv']"));
		WebElement min40 = driver.findElement(By.xpath("//span[@aria-label='40 minutes']"));
		a.dragAndDrop(min00, min40).perform();
		driver.findElement(By.xpath("//span[text()='PM']")).click();
		driver.findElement(By.xpath("//button[text()='OK']")).click();

		TakesScreenshot s=(TakesScreenshot)driver;
		File src = s.getScreenshotAs(OutputType.FILE);
		File dsc = new File("/media/ahub/9f6e90fe-dd38-4c6f-8e80-5e926fab903e/eclipse linux/com.demo.practice/in.ahub.prac/Screenshot/DAppTimePicker.jpeg");
		Files.copy(src, dsc);
		driver.quit();
	}
}
